<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:backgroundTint="@color/app_them_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
            app:tint="@color/app_them" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
           android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:civ_border_width="3dp"
            app:civ_border_color="#18CCE7"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/Product_id"
            android:layout_marginLeft="350dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/baseline_search_24"
            android:backgroundTint="@color/app_them"/>

        <TextView
            android:id="@+id/Product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular Products"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/fab_back"
            />
        <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Product_id"
            >

        <LinearLayout
            android:id="@+id/Liner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@+id/Course"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/black"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shoes2" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@+id/Course"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/black"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shoes2" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view18"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@+id/Course"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/black"
                app:strokeWidth="5dp">

                <ImageView
                    android:id="@+id/c18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shoes2" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/new_collection"
            android:layout_below="@id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Collections"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/new_collection">


<LinearLayout
    android:id="@+id/Linear2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/new_collection"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view12"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_below="@+id/Course"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp">

        <ImageView
            android:id="@+id/c12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/shoes4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_below="@+id/LogoImg"
            android:text=" Puma Shoes"
            android:textColor="#D18577"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="220dp"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view32"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_below="@+id/Course"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp">

        <ImageView
            android:id="@+id/c32"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/shoes4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_below="@+id/LogoImg"
            android:text=" Puma Shoes"
            android:textColor="#D18577"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="220dp"
            />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/Pro_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view32"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="660dp"
            android:text="Popular Products"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Pro_d">

            <ImageView
                android:id="@+id/c41"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/shoes2" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>